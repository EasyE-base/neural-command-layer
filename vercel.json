{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --ignore-scripts",
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*", "package.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/index.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}